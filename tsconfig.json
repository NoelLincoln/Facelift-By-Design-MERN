{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true, 
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensures consistent casing in filenames
    "types": ["node", "jest"] // Include type definitions for Node.js and Jest (if running tests)
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"] // Exclude test files from production build
}
